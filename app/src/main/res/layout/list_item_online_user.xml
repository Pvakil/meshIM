<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/meshim_margin_small"
    android:paddingLeft="@dimen/meshim_margin_medium"
    android:paddingRight="@dimen/meshim_margin_medium"
    android:paddingTop="@dimen/meshim_margin_small">

    <ImageView
        android:id="@+id/conversation_avatar"
        android:layout_width="@dimen/meshim_square_avatar"
        android:layout_height="@dimen/meshim_square_avatar"
        android:layout_marginBottom="@dimen/meshim_margin_small"
        android:layout_marginTop="@dimen/meshim_margin_small"
        android:contentDescription="@string/user_avatar_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conversation_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/meshim_margin_small"
        android:layout_marginLeft="@dimen/meshim_margin_small"
        android:layout_marginStart="@dimen/meshim_margin_small"
        android:layout_marginTop="@dimen/meshim_margin_small"
        android:padding="@dimen/meshim_margin_small"
        android:paddingBottom="@dimen/meshim_margin_mini"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/conversation_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/meshim_margin_small"
        android:layout_marginEnd="@dimen/meshim_margin_mini"
        android:layout_marginLeft="@dimen/meshim_margin_small"
        android:layout_marginRight="@dimen/meshim_margin_mini"
        android:layout_marginStart="@dimen/meshim_margin_small"
        android:layout_marginTop="@dimen/meshim_margin_small"
        android:background="@drawable/chat_bubble_rec"
        android:gravity="start"
        android:padding="@dimen/meshim_margin_mini"
        android:text="@string/in_range"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/conversation_username"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>