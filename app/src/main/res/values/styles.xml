<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="meshIMTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/meshIMActionBar</item>
        <item name="actionBarStyle">@style/meshIMActionBar</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="meshIMActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">10dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_background
        </item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="MyTabs">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundStacked">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>