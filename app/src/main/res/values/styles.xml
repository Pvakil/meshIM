    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">
            @drawable/splash_background
        </item>

    </style>
    <style name="Text" parent="AlertDialog.AppCompat.Light"/>

    <style name="MyTabs">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundStacked">@color/greenFade</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/greenDark</item>
        <item name="background">@color/greenDark</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>


</resources>